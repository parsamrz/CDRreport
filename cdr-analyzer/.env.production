# CDR Analyzer Production Environment Configuration
# Used with: docker-compose -f docker-compose.prod.coolify.yml --env-file .env.production

# ============================================
# CORE APPLICATION SETTINGS
# ============================================
ENVIRONMENT=production
APP_NAME=CDR Analyzer
APP_VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=/app/data/cdr.db
DATABASE_TIMEOUT=30

# ============================================
# SECURITY CONFIGURATION
# ============================================
SECURE_COOKIES=true
CSRF_ENABLED=true
SESSION_TIMEOUT=3600
ALLOWED_HOSTS=*

# ============================================
# PERFORMANCE TUNING
# ============================================
WORKERS=4
WORKER_TIMEOUT=120
MAX_CONNECTIONS=100

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/cdr-analyzer.log
LOG_MAX_SIZE=100m
LOG_RETENTION_DAYS=30

# ============================================
# MONITORING & HEALTH CHECKS
# ============================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# ============================================
# RESOURCE LIMITS
# ============================================
MEMORY_LIMIT=2G
CPU_LIMIT=2

